@using Hookah.Resources
@using Hookah.ViewComponents
@model OrderViewModel 
<div class="order-form">
    <form asp-action="SendOrder" asp-controller="Catering" method="post"
                          data-ajax="true"
                          data-ajax-method="POST"
                          data-ajax-begin="onBegin"
                          data-ajax-success="onSuccess"
                          data-ajax-failure="onFailure" style="text-align:left;">
        <div class="form-row">
            <div class="form-group col-md-6">
               @await Component.InvokeAsync(nameof(PackagesSelectBox))
            </div>
            <div class="form-group col-md-6">
                <input asp-for="FirstName" type="text" class="form-control" id="name" placeholder="@UI.FirstName*" autocomplete="off">
                <span asp-validation-for="FirstName" class="text-light text-left mt-3 ml-2"></span>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <input asp-for="PhoneNumber" type="tel" class="form-control" id="tel" placeholder="@UI.PhoneNumber*" autocomplete="off">
                <span asp-validation-for="PhoneNumber" class="text-light text-left mt-3 ml-2"></span>
            </div>

            <div class="form-group col-md-6" >
                <input asp-for="Email" type="email" class="form-control" id="email" placeholder="@UI.Email*" autocomplete="off">
                <span asp-validation-for="Email" class="text-light text-left mt-3 ml-2"></span>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6 ">
                <div class="d-flex align-items-center justify-content-start">
                    <input asp-for="Month" type="number" min="1" max="12" class="form-control" id="month" placeholder="MM" autocomplete="off">
                    <input asp-for="Day" type="number" min="1" max="31" class="form-control" id="day" placeholder="DD" autocomplete="off">
                    <input asp-for="Year" type="number" min="2021" max="2099" class="form-control" id="year" placeholder="YYYY" autocomplete="off">
                </div>
                <span asp-validation-for="Day" class="text-light text-left mt-2 ml-2 d-block"></span>
                <span asp-validation-for="Month" class="text-light text-left mt-2 ml-2 d-block"></span>
                 <span asp-validation-for="Year" class="text-light text-left mt-2 ml-2 d-block"></span>

            </div>
            <div class="form-group col-md-6">
                <input asp-for="Time" type="time" class="form-control" id="startTime" placeholder="Start time*" autocomplete="off">
                <span asp-validation-for="Time" class="text-light text-left mt-3 ml-2"></span>
            </div>

        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <input asp-for="HourseOfService" type="number" class="form-control" id="hours" placeholder="@UI.HourseOfService*" autocomplete="off">
                <span asp-validation-for="HourseOfService" class="text-light text-left mt-3 ml-2"></span>
            </div>
            <div class="form-group col-md-6">
                <input asp-for="Address" type="text" class="form-control" id="address" placeholder="@UI.Address*" autocomplete="off">
                <span asp-validation-for="Address" class="text-light text-left mt-3 ml-2"></span>
            </div>
            <div class="form-group col-12">
                <textarea asp-for="Additions" class="form-control" id="additions" name="additions" placeholder="@UI.Additions" rows="3"></textarea>
                <span asp-validation-for="Time" class="text-light text-left mt-3 ml-2"></span>
            </div>
        </div>
        <button type="submit" id="sendBtn" class="call-button" style="position:relative;">Send</button>
    </form>
</div>