@model CatheringFullViewModel
@{
    ViewData["Title"] = "Index";
}

<main id="home">
    <section id="mainPhoto">
        <div class="background">
            <div class="image">
                <picture>
                    <source srcset="@(Model.CatheringView.ImageMB ?? "sources/img/default-mb.jpg")"
                            media="(max-width: 768px)" />
                    <source srcset="@(Model.CatheringView.ImagePL ?? "sources/img/default-pl.jpg" )"
                            media="(max-width: 1200px)" />
                    <img src="@(Model.CatheringView.ImageLP ?? "sources/img/default-lp.jpg")" />
                </picture>
                <div class="overlay"></div>
            </div>
            <div class="backgroundContent d-flex flex-column align-items-center justify-content-center">
                <h2>@Html.Raw(Model.CatheringView.ImageTitle)</h2>
                <img src="@(Model.SiteConfigurationView.CompanyLogoImage ?? "sources/img/company-icon.jpg")" alt="">
            </div>
        </div>
    </section>
    <section id="cathering-content-details" class="section-common">
        <h2>We offer all-inclusive hookah catering service for all kinds of events</h2>
        <ul>
            @foreach (var eventItem in Model.CatheringEvents)
            {
                <li><span>@eventItem.Name</span></li>
            }
        </ul>
        <hr>
        <p>@Html.Raw(Model.CatheringView.BaseTitleText)</p>
        <h3>@Html.Raw(Model.CatheringView.BaseTitleBoldText)</h3>
    </section>
    <section id="cathering-content-packages">
        <div class="title">
            <h1>@Html.Raw(Model.CatheringView.SelectPackageTitle)</h1>
            <div class="bottom-line"></div>
        </div>
        <div class="packages row">
            @foreach (var package in Model.Packages)
            {
                <div class="package col-12 col-sm-12 col-md-6 col-lg-4">
                    <div class="intro">
                        <div class="title">
                            <h1>@package.Title</h1>
                            <div class="bottom-line"></div>
                        </div>
                        <ul>
                            @foreach (var item in package.Items)
                            {
                                <li><span>@item.Text</span></li>
                            }
                        </ul>
                        <div class="package-bottom">
                            <div class="picing">
                                <h5>Extra hour <strong>$@package.ExtraHourPrice</strong></h5>
                                <hr>
                                <h5>From <strong>$@package.InitialPrice</strong></h5>
                            </div>
                            <a href="#" class="call-button">Order</a>
                        </div>
                    </div>
                </div>
            }

        </div>
    </section>
    <section id="cathering-content-precess" class=" section-common">
        <div class="title">
            <h1>@Html.Raw(Model.CatheringView.HowItWorksTitle)</h1>
            <div class="bottom-line"></div>
        </div>
        <div class="cathering-content-precess-flow">
            <ul>
                @foreach (var step in Model.HowItWorksSteps.OrderBy(m=>m.OrderNumber))
                {
                    <li class="d-flex align-items-center justify-content-between">
                        <p>
                            @Html.Raw(step.Text)
                        </p>
                        <img src="@step.ImagePath" alt="">
                    </li>
                }
            </ul>
        </div>
    </section>
    <section id="cathering-order" class="section-common-nopadding">
        <div class="title">
            <h1>@Html.Raw(Model.CatheringView.OrderTitle)</h1>
            <div class="bottom-line"></div>
        </div>
        <div class="order-form">
            <form>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <select id="inputState" class="form-control">
                            <option selected>Choose...</option>
                            <option value="1">Small Party</option>
                            <option value="2">Medium Event</option>
                            <option value="3">Big Bash</option>
                        </select>
                    </div>
                    <div class="form-group col-md-6">
                        <input type="text" class="form-control" id="name" placeholder="Name*" autocomplete="off">
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <input type="tel" class="form-control" id="tel" placeholder="Phone*" autocomplete="off">
                    </div>

                    <div class="form-group col-md-6">
                        <input type="email" class="form-control" id="email" placeholder="Email*" autocomplete="off">
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-6 d-flex align-items-center justify-content-start">
                        <input type="number" maxlength="2" class="form-control" id="month" placeholder="MM" autocomplete="off">
                        <input type="number" maxlength="2" class="form-control" id="day" placeholder="DD" autocomplete="off">
                        <input type="number" maxlength="4" class="form-control" id="year" placeholder="YYYY" autocomplete="off">
                    </div>
                    <div class="form-group col-md-6">
                        <input type="time" class="form-control" id="startTime" placeholder="Start time*" autocomplete="off">
                    </div>

                </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <input type="number" class="form-control" id="hours" placeholder="How many hourse of service*" autocomplete="off">
                    </div>
                    <div class="form-group col-md-6">
                        <input type="text" class="form-control" id="address" placeholder="Address*" autocomplete="off">
                    </div>
                    <div class="form-group col-12">
                        <textarea class="form-control" id="additions" name="additions" placeholder="Additions and Preferences" rows="3"></textarea>
                    </div>
                </div>
                <button type="submit" class="call-button">Send</button>
            </form>
        </div>
    </section>
</main>

