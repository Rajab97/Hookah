@model HomeFullViewModel
@{
    ViewData["Title"] = "Home Page";
}

<main id="home">
    <section id="mainPhoto">
        <div class="background">
            <div class="image">
                <picture>

                    @if (Model.HomeViewModel?.ImageMB != null && Model.HomeViewModel?.ImageLP != null && Model.HomeViewModel?.ImagePL != null)
                    {
                        <source srcset="sources/img/@Model.HomeViewModel.ImageMB"
                                media="(max-width: 768px)" />
                        <source srcset="sources/img/@Model.HomeViewModel.ImageLP"
                                media="(max-width: 1200px)" />
                        <img src="sources/img/@Model.HomeViewModel.ImagePL" />
                    }
                    else
                    {
                        <source srcset="sources/img/_36A1636.jpg"
                                media="(max-width: 768px)" />
                        <source srcset="sources/img/abdulaziz-sopranos-JddqEU-oBXM-unsplash.jpg"
                                media="(max-width: 1200px)" />
                        <img src="sources/img/viktor-forgacs-r3SkTAMGeUg-unsplash.jpg" />
                    }

                </picture>
                <div class="overlay"></div>
            </div>
            <div class="backgroundContent d-flex flex-column align-items-center justify-content-center">
                <h2>@Model.HomeViewModel?.ImageTitle</h2>
                <img src="sources/img/Harra_White+HH.png" alt="">
            </div>
        </div>
    </section>
    <section id="experience">
        <div class="section-common">
            <div class="experience-top ">
                <p>
                    @Model.HomeViewModel?.ParagraphText
                </p>
                <a href="tel:+994553246307" class="call-button">@Model.HomeViewModel?.CallButtonText</a>
            </div>
            <div class="experience-gallary">
                @if (Model?.HomeLinkViewModels!=null)
                {
                    foreach (var item in Model.HomeLinkViewModels)
                    {
                        <div class="experience-gallary-item">
                            <div class="experience-gallary-item-img">
                                <img src="@item?.ImagePath" alt="">
                                <div class="overlay"></div>
                            </div>
                            <div class="experience-gallary-item-content d-flex flex-column justify-content-center align-items-center">
                                <h1>@item?.Name</h1>
                                <a href="@item?.Link" class="call-button">Learn more</a>
                            </div>
                        </div>
                    }
                }


