<main id="home">
    <section id="mainPhoto">
        <div class="background">
            <div class="image">
                <picture>
                        <source srcset="@(Model.HomeViewModel.ImageMB??"sources/img/_36A1636.jpg")"
                                media="(max-width: 768px)" />
                        <source srcset="@(Model.HomeViewModel.ImageLP??"sources/img/abdulaziz-sopranos-JddqEU-oBXM-unsplash.jpg")"
                                media="(max-width: 1200px)" />
