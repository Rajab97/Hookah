@model FAQFullViewModel
@{
    ViewData["Title"] = "Index";
}

<main id="home">
    <section id="mainPhoto">
        <div class="background">
            <div class="image">
                <picture>
                    <source srcset="@(Model.FaqViewModel.ImageMB ?? "sources/img/default-mb.jpg")"
                            media="(max-width: 768px)" />
                    <source srcset="@(Model.FaqViewModel.ImagePL ?? "sources/img/default-pl.jpg" )"
                            media="(max-width: 1200px)" />
                    <img src="@(Model.FaqViewModel.ImageLP ?? "sources/img/default-lp.jpg")" />
                </picture>
                <div class="overlay"></div>
            </div>
            <div class="backgroundContent d-flex flex-column align-items-center justify-content-center">
                <h2>@Html.Raw(Model.FaqViewModel.ImageTitle)</h2>
                <img src="@(Model.SiteConfigurationViewModel.CompanyLogoImage ?? "sources/img/company-icon.jpg")" alt="">
            </div>
        </div>
    </section>
    <section id="faq-questions" class="section-common">
        @foreach (var question in Model.FaqQuestions)
        {
            <div class="faq-item">
                <h2>@Html.Raw(question.Question)</h2>
                <p>
                    @Html.Raw(question.Answer)
                </p>
            </div>
        }

    </section>
</main>

